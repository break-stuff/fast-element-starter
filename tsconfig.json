{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "allowJs": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.tests.ts",
    "src/**/styles.ts",
    "src/**/*.stories.tsx"
  ]
}