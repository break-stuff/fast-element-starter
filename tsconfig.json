{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "jsx": "react",
    "reactNamespace": "React",
  },
  "include": ["./src"],
  "exclude": ["./dist", "node_modules", "**/*.tests.ts"]
}
