{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "allowJs": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "**/*.tests.ts",
    "./src/**/*.styles.ts",
    "src/**/*.stories.tsx"
  ]
}